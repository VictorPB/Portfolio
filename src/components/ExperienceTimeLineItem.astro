---
interface Props {
	experience: {
		time: string
		job: string
		company: string
		description: Array<string>
	}
}

const { experience } = Astro.props
---

<li class="mb-16 ms-4 flex flex-col md:flex-row md:justify-start md:gap-12">
	<div
		class="absolute -start-1.5 mt-[10px] h-3 w-3 rounded-full border border-fuchsia-500 bg-fuchsia-500"
	>
	</div>
	<aside class="md:w-[40%]">
		<h3 class="text-2xl font-semibold">
			{experience.job}
		</h3>
		<h4 class="text-lg text-gray-800 dark:text-gray-300">{experience.company}</h4>
		<time class="mb-1 text-lg font-normal leading-none text-gray-400">{experience.time}</time>
	</aside>
	<div
		class="flex flex-col text-pretty text-xl font-normal text-gray-800 dark:text-gray-100 md:w-[60%]"
	>
		{experience.description.map((paragraph) => <p class="mb-1">{paragraph}</p>)}
		<div></div>
	</div>
</li>
