---
import ExperienceTimeLineItem from '@components/ExperienceTimeLineItem.astro'

const EXPERIENCE = [
	{
		time: 'Junio 2024 - Diciembre 2024',
		job: 'Desarrollador FullStack',
		company: 'Constella Intelligence',
		description: 'Puesto como desarrollador de una aplicación de ciberinteligencia.'
	},
	{
		time: 'Enero 2024 - Mayo 2024',
		job: 'Desarrollador Frontend',
